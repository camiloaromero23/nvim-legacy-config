{
  "pairs.enableCharacters": ["(", "[", "{", "'", "\"", "`"],
  "suggest.noselect": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "json",
    "javascriptreact",
    "typescript.tsx",
    "python"
  ],
  "eslint.filetypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact",
    "typescript.tsx"
  ],
  "emmet.includeLanguages": { "javascript": "javascriptreact" },
  "coc.preferences.diagnostic.virtualText": true,
  // python config
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,

  "snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/utils/snips"],
  "workspace.ignoredFiletypes": ["markdown", "log", "txt", "help"],
  "coc.source.buffer.ignoreGitignore": true
}
